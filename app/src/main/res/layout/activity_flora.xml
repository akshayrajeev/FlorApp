                    app:layout_constraintTop_toBottomOf="@id/tv_seedFruitColor" />

                <TextView
                    android:id="@+id/activity_flora_tv_seedFruitSeedBegin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_seedFruitSeedBegin"
                    app:layout_constraintTop_toBottomOf="@id/tv_seedFruitColor" />

                <TextView
                    android:id="@+id/tv_seedFruitSeedEnd"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/seed_period_end"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
