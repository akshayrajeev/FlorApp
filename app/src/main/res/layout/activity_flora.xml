                    android:id="@+id/tv_minPlantingDensity"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/min_planting_density"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_maxPh" />

                <TextView
                    android:id="@+id/activity_flora_tv_minPlantingDensity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_minPlantingDensity"
                    app:layout_constraintTop_toBottomOf="@id/activity_flora_tv_maxPh" />

                <TextView
                    android:id="@+id/tv_maxPlantingDensity"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/max_planting_density"
