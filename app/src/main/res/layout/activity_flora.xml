                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/activity_flora_tv_seedFruitBloomPeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="TextView"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_seedFruitCommercialAvailability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_seedFruitBloomPeriod"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_seedFruitCommercialAvailability"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Commercial Availability"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/activity_flora_tv_seedFruitCommercialAvailability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="TextView"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_seedFruitSeedlingVigor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_seedFruitCommercialAvailability"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_seedFruitSeedlingVigor"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Seedling Vigor"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/activity_flora_tv_seedFruitSeedlingVigor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="TextView"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_seedFruitSeedsPerPound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_seedFruitSeedlingVigor"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_seedFruitSeedsPerPound"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Seeds Per Pound"
                            android:textColor="@color/colorBlack"
