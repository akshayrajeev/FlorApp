                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_caco3Tolerance"
                    app:layout_constraintTop_toBottomOf="@id/tv_GrowthText" />

                <TextView
                    android:id="@+id/tv_droughtTolerance"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/drought_tolerance"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_caco3Tolerance" />

                <TextView
                    android:id="@+id/activity_flora_tv_droughtTolerance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_droughtTolerance"
                    app:layout_constraintTop_toBottomOf="@id/activity_flora_tv_caco3Tolerance" />

                <TextView
                    android:id="@+id/tv_fireTolerance"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/fire_tolerance"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_droughtTolerance" />

                <TextView
                    android:id="@+id/activity_flora_tv_fireTolerance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_fireTolerance"
                    app:layout_constraintTop_toBottomOf="@id/activity_flora_tv_droughtTolerance" />

                <TextView
                    android:id="@+id/tv_minPh"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
