                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_seedFruitSeedBegin" />

                <TextView
                    android:id="@+id/activity_flora_tv_seedFruitSeedEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_seedFruitSeedEnd"
                    app:layout_constraintTop_toBottomOf="@id/activity_flora_tv_seedFruitSeedBegin" />

                <TextView
                    android:id="@+id/tv_seedFruitBloomPeriod"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/seed_bloom_period"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_seedFruitSeedEnd" />

                <TextView
                    android:id="@+id/activity_flora_tv_seedFruitBloomPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_seedFruitBloomPeriod"
                    app:layout_constraintTop_toBottomOf="@id/activity_flora_tv_seedFruitSeedEnd" />

                <TextView
                    android:id="@+id/tv_seedFruitCommercialAvailability"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/commercial_availability"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_seedFruitBloomPeriod" />

                <TextView
                    android:id="@+id/activity_flora_tv_seedFruitCommercialAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_seedFruitCommercialAvailability"
                    app:layout_constraintTop_toBottomOf="@id/activity_flora_tv_seedFruitBloomPeriod" />

                <TextView
                    android:id="@+id/tv_seedFruitSeedlingVigor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/seedling_vigor"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_seedFruitCommercialAvailability" />

                <TextView
                    android:id="@+id/activity_flora_tv_seedFruitSeedlingVigor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_seedFruitSeedlingVigor"
                    app:layout_constraintTop_toBottomOf="@id/activity_flora_tv_seedFruitCommercialAvailability" />

                <TextView
                    android:id="@+id/tv_seedFruitSeedsPerPound"
