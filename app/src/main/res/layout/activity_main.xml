<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="50dp"
        android:paddingTop="50dp"
        android:paddingEnd="50dp">

        <ImageView
            android:id="@+id/activity_main_iv_logo"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            app:srcCompat="@drawable/main_logo_icon" />

        <TextView
            android:id="@+id/activity_main_tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_iv_logo"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:fontFamily="@font/acme"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="46sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_tv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:checkedButton="@id/activity_main_rb_common">

            <RadioButton
                android:id="@+id/activity_main_rb_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:alpha="0"
                android:buttonTint="@color/colorBlack"
                android:text="Common Name"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/activity_main_rb_scientific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:buttonTint="@color/colorBlack"
                android:text="Scientific Name"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:id="@+id/activity_main_tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:alpha="0"
            android:text="Show Incomplete Data"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="201dp" />

        <Switch
            android:id="@+id/activity_main_sw_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_tv_complete"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:theme="@style/SwitchTheme"
            tools:layout_editor_absoluteX="323dp"
            tools:layout_editor_absoluteY="26dp" />

        <EditText
            android:id="@+id/activity_main_et_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/activity_main_sw_complete"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:alpha="0"
            android:background="@drawable/main_search"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorBlack"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@android:string/search_go"
            android:imeOptions="actionSearch"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:text="Apple"
            android:textColor="@color/colorBlack"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="83dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>